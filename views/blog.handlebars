<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

    {{#if Comments}}
  <section class="card">
    <div class="card-header">
      <h3>Comments</h3>
    </div>
    <div class="card-body">
      {{#each Comments}}
        <div>
          <p>
            {{text}}
          </p>
          <p>
            &mdash; {{User.username}}, {{format_date createdAt}}
          </p>
        </div>
      {{/each}}
    </div>
  </section>
{{/if}}

 <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>
    <div class="card-body">
      <input type="hidden" name="post-id" value="{{id}}" />
      <label class="form-label" for="comment-body">Comment</label>
      <textarea name="comment-body" class="form-input"></textarea>
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/profile.js"></script>